/* pages/store/tabs/index.wxss */

.list_box{
  width: 100%;
  border-top: 1px solid rgb(223, 223, 223);
  box-sizing: border-box;
  padding-top: 20rpx;
  margin-top: 10rpx;
}

.imgBox{
  height: 300rpx;
  position: relative;
}
.imgBox>.views,
.imgBox>.haveChange{
  position: absolute;
  z-index: 5;
  color: white;
}
.imgBox>.image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
} 
.golds{
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  z-index: 5;
  
  font-weight: 600;
  font-size: 27rpx;
}
.glodIcon{
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 6rpx;
  margin-right: 6rpx;
}
.haveChange{
  top: 20rpx;
  right: 20rpx;
  font-size: 28rpx;
}
.btnChnge{
  right: 20rpx;
  bottom: 20rpx;
  font-size: 32rpx;
  background-color: #7715c1;
  padding: 4rpx 20rpx;
  border-radius: 30rpx;
}
.introName{
  top: 50%;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 6rpx 30rpx;
  font-size: 34rpx;
}
.loding{
  display: flex;
  justify-content: center;
  padding: 32rpx 0;
}
.loadingStatus{
  display:inline-block;color:#c8c9cc;font-size:30rpx;
}
.loadingI{
  display:inline-block;color:#c8c9cc;font-size:30rpx;
}
.moveOut{
  display:flex;color:#c8c9cc;font-size:30rpx;transform:rotate(180deg) !important;
}
.boxLoaing{
  display:flex;justify-content:center;margin:10rpx 0;
}
.boxVie{
  display:inline-block;color:#c8c9cc;font-size:30rpx;
}
.timeToBug{
  background: linear-gradient(white,white,#d6b0ff);
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  border-top: 1px solid rgb(223, 223, 223);
}
.topFirst{
  display: flex;

}
.topFirst>text{
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  font-size: 34rpx;
  font-weight: bold;
  margin-right: 12rpx;
}
.topFirst>view{
  
  font-size: 26rpx;
  display: flex;
  border-radius: 10rpx;
  border: 1px solid red;
}
.topFirst>view>view{
  padding: 2rpx 10rpx;
  box-sizing: border-box;
  
}
.bottomBoxss{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  
}
.bottomBoxss>view{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 16rpx;
}
.bottomBoxss image{
  width: 100rpx;
  height: 100rpx;
}
.bottomBoxss text{
  font-size: 30rpx;
}


/* 弹出层 */
.popBox{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.9);
  z-index: 99999;
  display: flex;
  justify-content: center;
}
.popBox>view{
  width: 86%;
  position: relative;
  top: 175rpx;
  display:flex;
  height: 500rpx;
  flex-direction: column;
  align-items: center;
  background-color: white;
  border-radius: 10rpx;
  font-size: 36rpx;
}
.closeIcon{
  position: absolute;
  width: 45rpx;
  height: 45rpx;
  background-image: url('data:image/png;base64,');
  background-size: 100% 100%;
  right: 20rpx;
  top: 20rpx;
  
}
.middleImg{
  width: 180rpx;
  height: 180rpx;
  position: relative;
  top: -80rpx;
}
.titleSt{
  color:#d69112;
  position:relative;
  top:-60rpx;
}
.exchangeToast{
  padding: 0 140rpx;
  text-align: center;
  position: relative;
  top: -26rpx;
}
.sureExchangeBtn{
  color: white;
  background-color: rgb(221, 86, 8);
  font-size: 36rpx;
  padding: 0 150rpx;
  border-radius: 40rpx;
  margin: 10rpx 0 20rpx;
}