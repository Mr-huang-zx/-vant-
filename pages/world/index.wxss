.topBox{
  width: 100%;
  height: 800rpx;
  position: relative;
}
.topBox>view{
  position: absolute;
  z-index: 5;
}
.putStarBox{
  width: 92%;
  left: 4%;
  height: 500rpx;
  top: 140rpx;
  color: white;
  animation: starO infinite 3s;
}
@keyframes starO{
  0%{
    left: 4%;
    top: 140rpx;
  }
  25%{
    left: 4.5%;
    top: 135rpx;
  }
  50%{
    left: 5%;
    top: 140rpx;
  }
  75%{
    left: 4.5%;
    top: 145rpx;
  }
  100%{
    left: 4%;
    top: 140rpx;
  }
}
.star_1{
  left: 50rpx;
}
.star_2{
  bottom: 4rpx;
}
.star_3{
  left: 50%;
  top: 30rpx;
  transform: translateX(-50%);
}
.star_4{
  left:25%;
  transform: translateX(-50%);
  top: 50%;
  transform: translateY(-50%);
}
.star_5{
  left: 75%;
  transform: translateX(-50%);
  top: 28%;
}
.star_6{
  right: 0;
  top: 10rpx;
}
.star_7{
  right: 6rpx;
  bottom: 6rpx;
}
.luckyBox{
  width: 241rpx;
  height: 279rpx;
  bottom: 80rpx;
  left: 50%;
  transform: translateX(-50%);
}
.luckyBox>image{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
}
.luckyBox>view{
  position: absolute;
  z-index: 5;
  top: 50%;
  transform: translateY(-50%);
  left: 35%;
  color: white;
}
.transureBox{
  right: 20rpx;
  bottom: 30rpx;
  width: 120rpx;
  height: 150rpx;
}
.putStarBox>view{
  width: 100rpx;
  height: 200rpx;
  position: absolute;
  text-align: center;
}
.transureImg{
  width:100%;
  height:76rpx;
  animation: transureName infinite 4s;
}
.transureImg>image{
  width: 100%;
  height: 100%;
}
@keyframes transureName{
  0%{
    transform: scale(1);
  }
  50%{
    transform: scale(1.2);
  }
  100%{
    transform: scale(1);
  }
}
.putStarBox>view>view{
  width: 100rpx;
  height: 100rpx;
  position: relative;
}
.putStarBox>view>view>text{
  position: absolute;
  font-weight: bold;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 5;
}
.putStarBox>view>view>image{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.bgSand{
  position: absolute;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
}
.topLine{
  width: 94%;
  margin-left: 3%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  
}
.noticeBox{
  width: 80%;
}
.guizBtn{
  background-color:#658aee;
  color:white;
  height:50rpx;
  padding: 6rpx 20rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
}
.actionBox{
  width: 92%;
  margin-left: 4%;
  padding: 20rpx 0;
}
.actionBox>view{
  width: 100%;
}
.topBoxs{
  display:flex;
  justify-content: space-between;
}
.topBoxs>view{
  width: 32%;
  border: 1px solid #ebebeb;
  border-radius: 10px;
  padding: 20rpx;
  box-sizing: border-box;
  text-align: center; 
}
.topBoxs>view>view{
  display: flex;
  
  align-items: center;
  font-size: 34rpx;
  font-weight: bold;
}
.topBoxs>view image{
  width: 65rpx;
  height: 65rpx;
}
.inviteBox{
  margin-top: 30rpx;
  border: 1px solid #ebebeb;
  padding: 20px;
  box-sizing: border-box;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.inviteBox>view{
  width: 100%;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.inviteBox>view>view{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.topToast>image{
  width: 40rpx;
  height: 40rpx;
}
.inviteNum{
  border-bottom: 1px solid #f1f1f1;
  padding: 16rpx 0;
}
.inviteNum image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
.rightBtn{
  border: 1px solid #658aee;
  color: #658aee;
  font-size: 26rpx;
  padding: 4px 20px;
  border-radius: 30px;
}
.inviteBox>.inviteBtn{
  width: auto;
  padding: 6rpx 80rpx;
  color: white;
  font-weight: bold;
  font-size: 30rpx;
  background-color: #658aee;
  border-radius: 10px;
  margin-bottom: 0;
}