.topBox{
  height: 400rpx;
  background-color: royalblue;
  position: relative;
}
.topBox>image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.topBox>view{
  position: absolute;
  z-index: 5;
  display: flex;
}
.topLan{
  top: 0;
  left: 4%;
  width: 92%;
  justify-content: space-between;
}
.topLan image{
  width: 60rpx;
  height: 60rpx;
}
.headerBox{
  width: 60%;
  left: 20%;
  top: 80rpx;
  align-items: center;
  flex-direction: column;
  color: white;
  font-size: 34rpx;
}
.headerImg{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  
}
.headerImg>image{
  width: 100%;
  height: 100%;
}
.headerBox>text{
  margin: 16rpx 0;
}
.inforBox{
  display: flex;
  width: 100%;
  justify-content: space-between;
}
.inforBox>view{
  width: 50%;
  padding: 0 20rpx;
  text-align: center;
}
.inforBox>view:nth-of-type(1){
  border-right: 1px solid white;
}
.btnAct{
  width: 92%;
  margin-left: 4%;
  position: relative;
  top: -60rpx;
}
.btnAct>view{
  width: 100%;
}
.actionBtn{
  background-color: white;
  border: 1px solid #c7c7c7;
  border-radius: 10px;
  padding:50rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.actionBtn>view{
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 32rpx;
}
.actionBtn>view>image{
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}
.swiperBox{
  height:200rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0px 4px 4px #999;
}
.swiperBox image{
  width: 100%;
  height: 100%;
}
.lineBox{
  width: 100%;
  height: 10rpx;
  background-color: #e6e6e6;
}
.listBox{
  padding: 0 4% 30rpx;
  box-sizing: border-box;
}
.listHeader{
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  border-bottom:2px solid  #e6e6e6;
}
.listHeader>view{
  width: 8rpx;
  height: 32rpx;
  background-color: blue;
  margin-right: 12rpx;
}
.listL{
  width: 100%;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom:1px solid  #e6e6e6;
}
.listLeft{
  display: flex;
  flex-direction: row;
}
.listLeft>view:nth-of-type(1){
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 12rpx;
}
.listLeft>view:nth-of-type(1)>image{
  width: 100%;
  height: 100%;
}
.listLeft>view:nth-of-type(2){
  display: flex;
  flex-direction: column;
  height: 100%;
  margin-left: 12rpx;
  
}
.introWord{
  font-size: 34rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  margin-bottom:16rpx;
}
.introWord>text{
  color: red;
}
.introWord>image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 12rpx;
}
.toFinish{
  padding: 8rpx 30rpx;
  border-radius: 40rpx;
  background-color: royalblue;
  color: white;
  box-sizing: border-box;
  font-size: 30rpx;
}